generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id        String     @id @default(uuid())
  name      String
  inventory Inventory?
}

model Inventory {
  productId      String   @id
  product        Product  @relation(fields: [productId], references: [id])
  availableStock Int
  reservedStock  Int
  updatedAt      DateTime @updatedAt
}

model Order {
  id        String      @id @default(uuid())
  userId    String
  status    String
  createdAt DateTime    @default(now())
  items     OrderItem[]
}

model OrderItem {
  orderId   String
  productId String
  quantity  Int

  order Order @relation(fields: [orderId], references: [id])

  @@id([orderId, productId])
}

model IdempotencyKey {
  key        String   @id
  orderId    String
  createdAt  DateTime @default(now())
}